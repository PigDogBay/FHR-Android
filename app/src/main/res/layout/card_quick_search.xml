<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUICK SEARCH"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_quick_search_name_text"/>

        <EditText
            android:id="@+id/card_quick_search_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/home_enter_business_hint"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/card_quick_search_place_text"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/textView16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14"/>

        <ImageButton
            android:id="@+id/card_quick_search_name_clear"
            style="@style/MaterialButton"
            android:layout_width="24dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_clear_black_24dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/card_quick_search_name_text"
            app:layout_constraintBottom_toBottomOf="@+id/card_quick_search_name_text"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="@+id/card_quick_search_name_text"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_bias="0.0"/>

        <EditText
            android:id="@+id/card_quick_search_place_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:hint="@string/home_enter_place_hint"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/card_quick_search_name_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/card_quick_search_name_text"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_quick_search_place_text"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/card_quick_search_clear_place"
            style="@style/MaterialButton"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_quick_search_place_text"
            app:layout_constraintRight_toRightOf="@+id/card_quick_search_place_text"
            app:layout_constraintTop_toTopOf="@+id/card_quick_search_place_text"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_clear_black_24dp"/>

        <Button
            android:id="@+id/card_quick_search_search_button"
            style="@style/MaterialButton"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="SEARCH"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/card_quick_search_clear_place"
            app:layout_constraintTop_toBottomOf="@+id/card_quick_search_place_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>